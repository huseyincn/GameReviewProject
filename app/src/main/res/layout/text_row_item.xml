<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gtav" />

    <TextView
        android:id="@+id/gameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/sfprodisplaybold"
        android:letterSpacing="0.0038"
        android:text="GAME NAME"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        android:textStyle="bold"
        android:scrollHorizontally="false"/>

    <TextView
        android:id="@+id/metacritict"
        android:fontFamily="@font/sfprodisplaymedium"
        android:letterSpacing="0.0038"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="metacritic:"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/genres"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        android:layout_marginBottom="10dp"
        android:lineHeight="25sp"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/scoreId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88"
        android:textColor="#D80000"
        android:textSize="18sp"
        android:lineHeight="25sp"
        android:fontFamily="@font/sfprodisplaybold"
        android:letterSpacing="0.0038"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toTopOf="@+id/genres"
        app:layout_constraintStart_toEndOf="@+id/metacritict"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action, shooter"
        android:textColor="#8A8A8F"
        android:fontFamily="@font/sfprodisplayregular"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:lineHeight="18sp"
        android:layout_marginLeft="16dp"
        android:textSize="13sp" />

</androidx.constraintlayout.widget.ConstraintLayout>